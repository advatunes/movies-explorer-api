{
  "env": {
    "node": true
  },
  "extends": ["eslint:recommended", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "max-classes-per-file": ["error", 10],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "linebreak-style": "off"
  },
  "ignorePatterns": ["node_modules/"]
}
